package javax.rad.application;

/**
 * The <code>IDataConnector</code> defines the handling with data records.
 * 
 * @author René Jahn
 */
public interface IDataConnector 
{
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	// Method definitions
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	
	/**
	 * Saves the data changes.
	 * 
	 * @throws Throwable if the save process failed
	 */
	public void save() throws Throwable;
	
	/**
	 * Reloads the data and discard changes.
	 * 
	 * @throws Throwable if the reload process failed
	 */
	public void reload() throws Throwable;

}	// IDataConnector
