package com.sibvisions.rad.ui.vaadin.ext.ui.client;

import com.vaadin.shared.MouseEventDetails;
import com.vaadin.shared.communication.ServerRpc;

/**
 * The <code>MouseOverServerRpc</code> class is the RPC-Interface for the {@link com.sibvisions.rad.ui.vaadin.ext.ui.MouseOverButton}.
 * 
 * @author Stefan Wurm
 */
public interface MouseOverServerRpc extends ServerRpc
{
    //~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    // Method definitions
    //~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	

	/**
	 * Called by mouse over.
	 * 
	 * @param pEvent the MouseEvent
	 */
	public void mouseOver(MouseEventDetails pEvent);
	
	/**
	 * Called by mouse out.
	 * 
	 * @param pEvent the MouseEvent
	 */
	public void mouseOut(MouseEventDetails pEvent);
	
} 	// MouseOverServerRpc
