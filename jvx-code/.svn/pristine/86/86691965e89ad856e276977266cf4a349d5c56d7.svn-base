package com.sibvisions.rad.ui.swing.ext.event;

import java.awt.event.ActionEvent;
import java.util.EventListener;

/**
 * The <code>IMenuActionListener</code> is a marker listener for menu action events.
 * 
 * @author René Jahn
 */
public interface IMenuActionListener extends EventListener
{
    //~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    // Method definitions
    //~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~    

    /**
     * Invoked when a menu action occurs.
     * 
     * @param pEvent the event
     */
    public void menuActionPerformed(ActionEvent pEvent);

}   // IMenuActionListener
