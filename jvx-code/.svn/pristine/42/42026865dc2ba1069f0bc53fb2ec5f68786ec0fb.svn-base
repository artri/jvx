package com.sibvisions.rad.ui.vaadin.impl.container;

import javax.rad.ui.container.IScrollPanel;

/**
 * The <code>VaadinScrollPanel</code> class is the vaadin implementation of {@link IScrollPanel}.
 * 
 * @author Benedikt Cermak
 * @see IScrollPanel
 */
public class VaadinScrollPanel extends VaadinPanel
                               implements IScrollPanel 
{
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    // Initialization
    //~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

	/**
	 * Creates a new instance of <code>VaadinScrollPanel</code>.
	 */
	public VaadinScrollPanel()
	{
		super();
		
		setScrolling(true);
	}

}	// VaadinScrollPanel
