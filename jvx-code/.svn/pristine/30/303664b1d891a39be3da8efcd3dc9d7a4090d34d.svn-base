-- Table: "TEST"
-- DROP TABLE "TEST";

CREATE TABLE TEST
(
  ID decimal(18) NOT NULL GENERATED BY DEFAULT  AS IDENTITY,
  NAME varchar(100),
  CONSTRAINT TEST_PK PRIMARY KEY (ID)
);


-- Table: "TEST_SORT"
-- DROP TABLE "TEST_SORT";

CREATE TABLE TEST_SORT
(
  ID decimal(18) NOT NULL GENERATED BY DEFAULT  AS IDENTITY,
  NAME varchar(100),
  SORT decimal(18),
  CONSTRAINT TEST_SORT_PK PRIMARY KEY (ID)
);

-- Table: DETAIL

-- DROP TABLE DETAIL;

CREATE TABLE test.DETAIL
(
  ID decimal(18) NOT NULL GENERATED BY DEFAULT  AS IDENTITY,
  NAME varchar(100),
  TEST_ID decimal(18),
  CONSTRAINT DETAIL_PK PRIMARY KEY (ID),
  CONSTRAINT TEST_FK FOREIGN KEY (TEST_ID)
      REFERENCES TEST (ID) 
      ON UPDATE NO ACTION ON DELETE NO ACTION
);

-- Table: ADRESSEN

-- DROP TABLE ADRESSEN;

CREATE TABLE ADRESSEN
(
  ID decimal(18) NOT NULL GENERATED BY DEFAULT  AS IDENTITY,
  POST_ID decimal(18) NOT NULL,
  STRA_ID decimal(18) NOT NULL,
  HAUSNUMMER decimal(18) NOT NULL,
  TUERNUMMER decimal(18),
  STIEGE decimal(18),
  CONSTRAINT ADRESSEN_PK PRIMARY KEY (ID)
);

-- Table: TEST_DEFAULTS

-- DROP TABLE TEST_DEFAULTS

CREATE TABLE TEST_DEFAULTS
(
  ACTIVE CHAR(1) NOT NULL WITH DEFAULT 'N' , 
  DATETIMEVAL TIMESTAMP NOT NULL WITH DEFAULT '2010-01-01 12:00:00' , 
  NUMBERVAL DECIMAL(11,0) NOT NULL WITH DEFAULT 1234 , 
  TEXT VARCHAR(50) NOT NULL WITH DEFAULT 'TEXT Test' , 
  DATEVAL DATE NOT NULL WITH DEFAULT '2001-01-01' 
); 

CREATE SYNONYM SYN_TEST FOR DETAIL;
