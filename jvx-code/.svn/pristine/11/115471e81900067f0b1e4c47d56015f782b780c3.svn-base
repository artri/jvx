package javax.rad.server.event;

/**
 * The listener interface for receiving failed session events.
 * 
 * @author René Jahn
 */
public interface IFailedSessionListener
{
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	// Method definitions
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

	/**
	 * Invoked when a session was not created correctly because of a failure.
	 * 
	 * @param pEvent the failed session event
	 */
	public void sessionFailed(FailedSessionEvent pEvent);
	
}	// IFailedSessionListener
