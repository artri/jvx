package com.sibvisions.rad.server.security.reset;

import javax.rad.server.ISession;

/**
 * The <code>IResetPasswordManager</code> has methods to reset a password.
 *  
 * @author René Jahn
 */
public interface IResetPasswordManager
{
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	// Method definitions
	//~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

	/**
	 * Resets a password for a specific session. 
	 * 
	 * @param pSession the session
	 * @throws Exception if resetting password fails
	 */
	public void resetPassword(ISession pSession) throws Exception;
	
}	// IResetPasswordManager
